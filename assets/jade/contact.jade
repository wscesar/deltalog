section#contact
	.wrap
		img(src='assets/img/logo.svg', width='266', height='37').logo
		
		form(data-form='contact_form', onsubmit='send_form(this);  return false')#contact_form
			.col1
				div
					input(type='text', id='name', name='name', required).text.name
					label(for='name') Nome

				div
					input(type='email', id='email', name='email', required).text.email
					label(for='email') Email

				div
					input(type='tel', id='phone', name='phone', required).text.phone
					label(for='phone') Telefone


			.col2
				div
					textarea(id='msg', name='msg', required).text.msg
					label(for='msg') Mensagem

				div
					button.submit enviar